{
  "name": "project",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist/* && rm -f .tsbuildinfo",
    "copy": "cp -r ./src/views ./dist/src/views && cp -r ./src/public ./dist/src/public",
    "compile": "npm run clean && ./node_modules/.bin/tsc -p tsconfig.json && npm run copy",
    "start": "npm run compile && node ./dist/src/server.js",
    "pretest": "npm install && npm run compile",
    "test": "./node_modules/.bin/mocha dist/test"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "express": "^4.18.2",
    "mocha": "^7.2.0",
    "mocha-junit-reporter": "^1.13.0",
    "mocha-multi-reporters": "^1.1.7",
    "morgan": "^1.9.1",
    "pug": "^3.0.0",
    "serve-favicon": "~2.4.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.13",
    "@types/typescript": "^2.0.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "mocha": {
    "reporter": "mocha-multi-reporters",
    "reporter-options": "reporter-config.json",
    "recursive": true
  }
}
